(function() {
	var user_id = '1111';
	var user_fullname = 'John Smith';
	var lng = -122.08;
	var lat = 37.38;
	
	init();
	
	function init() {
		initGeoLocation();
	}
	
	function initGeoLocation() {
		if (navigator.geolocation) {
			navigator.geoLocation.getCurrentPosition(onPositionUpdated,
					onLoadPositionFailed, {
				maximumAge : 60000
			});
			showLoadingMessage('Rertieving your location...');
		} else {
			onLoadPositionFailed();
		}
	}
	
})()

